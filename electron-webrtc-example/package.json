{
  "name": "security-camera-agent",
  "version": "2.28.0",
  "description": "Electron Security Camera Agent with WebRTC Live View and Away Mode",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "electron-store": "7.0.3",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.yourdomain.securitycamera",
    "productName": "Security Camera Agent",
    "publish": [
      {
        "provider": "github",
        "owner": "ioranr1",
        "repo": "cozy-project"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "artifactName": "Security-Camera-Agent-Setup.${ext}"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "extraResources": [
      {
        "from": "tray-icon.png",
        "to": "tray-icon.png"
      }
    ]
  },
  "author": "",
  "license": "MIT"
}
